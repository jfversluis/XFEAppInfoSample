<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFEAppInfoSample.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="AppInfo Sample" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="AppName" Text="Start developing now" FontSize="Title" Padding="30,10,30,10"/>
        <Label x:Name="PackageName" Text="Start developing now" FontSize="Title" Padding="30,10,30,10"/>
        <Label x:Name="Version" Text="Start developing now" FontSize="Title" Padding="30,10,30,10"/>
        <Label x:Name="Build" Text="Start developing now" FontSize="Title" Padding="30,10,30,10"/>

        <Button Text="Open Settings" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
